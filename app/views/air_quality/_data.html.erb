<% if error.present? %>
  <p class="mt-4 text-red-500 font-bold"><%= error %></p>
<% else %>
  <div class="min-h-screen flex flex-col items-center justify-center <%= bgColor %> p-6">
    <!-- Main AQI Card -->
    <div class=" bg-white shadow-md rounded-xl p-6 text-center">
      <p class="text-sm">üìç <span class="font-semibold"><%= data["location"]["cityName"] %>, <%= data["location"]["stateName"] %>, <%= data["location"]["countryName"] %></span></p>
      <p class="font-semibold text-8xl mt-4 mb-4"><%= data["location"]["aqius"] %></p>
      <p class="text-sm">Air Quality Index (US Standard)</p>
      <p class="text-xs text-right mt-4"><%= data["location"]["timeStamp"] %></p>
    </div>
    <!-- AQI Level of Concern -->
    <div class="mt-2 bg-white shadow-md rounded-lg p-6 w-full max-w-screen-md">
      <p class="text-sm">Level of Concern: <span class="font-semibold text-lg underline"><%= levelStatus %></span></p>
      <p class="text-sm">Description of Air Quality: <span class="font-semibold text-lg"><%= description %></span></p>
      <p class="mt-4 text-xs text-right">
        Source: 
        <a href="<%= data["location"]["sourceUrl"] %>" class="font-semibold text-xs text-blue-500 underline" target="_blank">
          <%= data["location"]["source"] %>
        </a>
      </p>
    </div>
    <!-- AQI Levels List -->
    <div class="mt-2 bg-white shadow-md rounded-lg p-6 w-full max-w-screen-md">
      <h3 class="text-sm font-bold mb-2">AQI Basics for Ozone and Particle Pollution</h3>
      <ul class="space-y-2">
        <% aqiLevels.each do |level| %>
          <li class="p-2 rounded-lg <%= level[:color] %> text-white text-sm">
            <span class="font-semibold"><%= level[:status] %></span>
            (<%= level[:index] %>) - <%= level[:description] %>
          </li>
        <% end %>
      </ul>
      <p class="mt-4 text-xs text-right">
        Source: 
        <a href="https://www.airnow.gov/aqi/aqi-basics/" class="font-semibold text-xs text-blue-500 underline" target="_blank">airnow.gov</a>
      </p>
    </div>
    <!-- Footer with Social Media Icons -->
    <footer class="fixed rounded-t-2xl bottom-0 left-0 right-0 bg-gray-800 text-white p-4 flex justify-center space-x-4">
      <a href="https://www.linkedin.com/in/farizramadhan" target="_blank" class="text-blue-400 hover:text-blue-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M4.98 3.5C3.89 3.5 3 4.4 3 5.5s.89 2 1.98 2c1.1 0 1.99-.9 1.99-2s-.89-2-1.99-2zM3 8h3v12H3V8zm5 0h3v1.5c.64-1.18 2.14-2.04 3.84-2.04 4.1 0 4.86 2.7 4.86 6.21V20h-3v-5.62c0-1.34-.03-3.08-1.89-3.08-1.89 0-2.18 1.47-2.18 2.99V20H8V8z"/>
        </svg>
      </a>
      <a href="https://github.com/farizdotid" target="_blank" class="text-gray-400 hover:text-gray-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.87 8.16 6.84 9.49.5.09.66-.21.66-.47v-1.69c-2.78.61-3.37-1.21-3.37-1.21-.46-1.15-1.13-1.45-1.13-1.45-.92-.63.07-.62.07-.62 1.02.07 1.55 1.05 1.55 1.05.91 1.55 2.39 1.1 2.97.84.09-.66.36-1.1.65-1.35-2.22-.25-4.56-1.11-4.56-4.92 0-1.09.39-1.98 1.03-2.68-.1-.26-.45-1.27.1-2.64 0 0 .84-.27 2.75 1.03a9.44 9.44 0 015 0c1.91-1.3 2.75-1.03 2.75-1.03.55 1.37.2 2.38.1 2.64.64.7 1.03 1.59 1.03 2.68 0 3.82-2.34 4.66-4.57 4.91.37.32.7.94.7 1.9v2.82c0 .27.16.58.67.47A10.01 10.01 0 0022 12c0-5.52-4.48-10-10-10z"/>
        </svg>
      </a>
      <a href="https://www.farizlogs.com/" target="_blank" class="text-gray-400 hover:text-gray-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>
      </a>
    </footer>
  </div>
</div>
<% end %>