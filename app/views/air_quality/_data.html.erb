<% if error.present? %>
  <p class="mt-4 text-red-500 font-bold"><%= error %></p>
<% else %>
  <div class="min-h-screen flex flex-col items-center justify-center <%= bgColor %> p-6">
    <div class=" bg-white shadow-md rounded-lg p-6 text-center">
      <p class="text-sm">üìç <span class="font-semibold"><%= data["location"]["cityName"] %></span></p>
      <p class="font-semibold text-8xl mt-4 mb-4"><%= data["location"]["aqius"] %></p>
      <p class="text-sm">Air Quality Index (US Standard)</p>
    </div>
    <div class="mt-2 bg-white shadow-md rounded-lg p-6">
      <p class="text-sm">Level of Concern: <span class="font-semibold text-lg underline"><%= levelStatus %></span></p>
      <p class="text-sm">Description of Air Quality: <span class="font-semibold text-lg"><%= description %></span></p>
      <p class="mt-4 text-xs text-right">
        Source: 
        <a href="<%= data["location"]["sourceUrl"] %>" class="font-semibold text-xs text-blue-500 underline" target="_blank">
          <%= data["location"]["source"] %>
        </a>
      </p>
    </div>
  </div>
</div>
<% end %>